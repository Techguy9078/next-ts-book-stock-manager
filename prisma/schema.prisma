// Sales Data Models
model Sales {
  id        Int      @id @default(autoincrement())
  isbn      String
  title     String
  author    String
  createdAt DateTime @default(now())
}

model SalesStats {
  date         String @id
  addedBooks   Int
  removedBooks Int
}

// Customer Request Models
model CustomerBookRequest {
  id                  Int      @id @default(autoincrement())
  customerName        String
  customerPhoneNumber String
  bookTitle           String?
  bookAuthor          String?
  bookISBN            String?
  comments            String?
  createdAt           DateTime @default(now())
}
